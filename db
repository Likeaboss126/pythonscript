⬆️"
⬇️

if summary:
    df_summary = pd.DataFrame(summary)

    def highlight_row(row):
        color = ''
        if row['Status'] == 'improved':
            color = 'background-color: #d4edda;'  # light green
        elif row['Status'] == 'degraded':
            color = 'background-color: #f8d7da;'  # light red
        return [color] * len(row)

    styled_df = df_summary.drop(columns=["Status"]).style.apply(highlight_row, axis=1)
    st.dataframe(styled_df, use_container_width=True)
else:
    st.info("No common API data available for both weeks.")

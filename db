DateTimeFormatter dateFormatter = DateTimeFormatter.ofPattern("MM-dd-yyyy");
        DateTimeFormatter dateTimeFormatter = DateTimeFormatter.ofPattern("yyyy-MM-dd HH:mm");

        // Parse start and end date with assumed times
        LocalDateTime startDateTime = LocalDate.parse(startDateStr, dateFormatter).atStartOfDay(); // 00:00
        LocalDateTime endDateTime = LocalDate.parse(endDateStr, dateFormatter).atTime(LocalTime.of(23, 59)); // 23:59

        // Parse the target datetime
        LocalDateTime checkDateTime = LocalDateTime.parse(checkDateStr, dateTimeFormatter);

        // Comparison
        return !checkDateTime.isBefore(startDateTime) && !checkDateTime.isAfter(endDateTime);

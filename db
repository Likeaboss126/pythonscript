import psycopg2

try:
    # Connect to PostgreSQL
    conn = psycopg2.connect(
        host="your-db-host.com",
        port=5432,
        dbname="your_database",
        user="your_user",
        password="your_password"
    )

    # Create a cursor
    cur = conn.cursor()

    # Query: select first 10 rows from a table
    cur.execute("SELECT * FROM your_table_name LIMIT 10;")

    # Fetch and print results
    rows = cur.fetchall()
    print("üìã First 10 Records:")
    for row in rows:
        print(row)

    # Clean up
    cur.close()
    conn.close()

except Exception as e:
    print("‚ùå Error querying the database:", e)

import java.io.*;
import java.util.zip.*;

public class ZipReader {
    public static void main(String[] args) throws IOException {
        String zipFilePath = "yourfile.zip"; // Replace with your .zip file

        try (ZipInputStream zis = new ZipInputStream(new FileInputStream(zipFilePath))) {
            ZipEntry entry;

            System.out.println("üîç .png files in the zip:");
            while ((entry = zis.getNextEntry()) != null) {
                String name = entry.getName();

                // List .png files
                if (name.toLowerCase().endsWith(".png")) {
                    System.out.println(" - " + name);
                }

                // Read note.txt content
                if (name.equalsIgnoreCase("note.txt")) {
                    System.out.println("\nüìÑ note.txt content:");
                    BufferedReader reader = new BufferedReader(new InputStreamReader(zis));
                    String line;
                    while ((line = reader.readLine()) != null) {
                        System.out.println(line);
                    }
                }

                zis.closeEntry();
            }
        } catch (IOException e) {
            System.err.println("Error reading zip file: " + e.getMessage());
        }
    }
}

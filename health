import org.apache.pdfbox.pdmodel.PDDocument;
import org.apache.pdfbox.pdmodel.interactive.form.PDAcroForm;
import org.apache.pdfbox.pdmodel.interactive.form.PDField;
import org.apache.pdfbox.pdmodel.interactive.annotation.PDAnnotationWidget;
import org.apache.pdfbox.pdmodel.common.PDRectangle;

import java.io.File;
import java.util.List;

public class FindSignatureBox {
    public static void main(String[] args) throws Exception {
        try (PDDocument document = PDDocument.load(new File("input.pdf"))) {
            PDAcroForm acroForm = document.getDocumentCatalog().getAcroForm();

            if (acroForm != null) {
                PDField sigField = acroForm.getField("Signature1"); // field name in PDF
                if (sigField != null) {
                    List<PDAnnotationWidget> widgets = sigField.getWidgets();
                    if (!widgets.isEmpty()) {
                        PDRectangle rect = widgets.get(0).getRectangle();
                        float x = rect.getLowerLeftX();
                        float y = rect.getLowerLeftY();
                        float width = rect.getWidth();
                        float height = rect.getHeight();

                        System.out.printf("Signature box coords: x=%f, y=%f, width=%f, height=%f%n",
                                x, y, width, height);
                    }
                }
            }
        }
    }
}
